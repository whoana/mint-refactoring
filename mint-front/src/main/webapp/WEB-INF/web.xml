	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/config/root-context.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<listener>
		<listener-class>pep.per.mint.front.listener.ResourceUnregisterListener</listener-class>
	</listener>

	<!-- Http loginHistory Management Listener(Asiana add) -->
	<listener>
		<listener-class>pep.per.mint.front.listener.FrontSessionListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>MintFrontWebAppServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<!--
			<param-value>
				/WEB-INF/classes/config/inhouse-context.xml,
				/WEB-INF/classes/config/front-context.xml,
				/WEB-INF/classes/config/database-context.xml,
				/WEB-INF/classes/config/batch-context.xml
			</param-value>
			-->
			<param-value>/WEB-INF/classes/config/mint-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>MintFrontWebAppServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>do</servlet-name>
		<jsp-file>/view/main/do.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>do</servlet-name>
		<url-pattern>/do</url-pattern>
	</servlet-mapping>

	<mime-mapping>
		<extension>css</extension>
		<mime-type>text/css</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>xml</extension>
		<mime-type>text/xml</mime-type>
	</mime-mapping>

	<error-page>
		<error-code>400</error-code>
		<location>/view/main/400.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/view/main/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/view/main/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/view/main/405.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/view/main/500.jsp</location>
	</error-page>
