						<configuration>
							<warSourceDirectory>src/main/webapp</warSourceDirectory>
							<warSourceExcludes>
							    helpdata-cn/**,
							    helpdata-en/**,
							    helpdata-ko/**,
								view_design/**,
								view_dev/**,
								sample/**,
								foo.html,
