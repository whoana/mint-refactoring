<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:task="http://www.springframework.org/schema/task"
	xsi:schemaLocation="
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.1.xsd
		http://www.springframework.org/schema/task
		http://www.springframework.org/schema/task/spring-task-3.0.xsd
		">
	<context:annotation-config />
	<context:component-scan
		base-package="pep.per.mint.agent
										 ,pep.per.mint.agent.controller
										 ,pep.per.mint.agent.exception
										 ,pep.per.mint.agent.service
										 ,pep.per.mint.agent.event
										 ,pep.per.mint.agent.handler
										 ,pep.per.mint.agent.scheduler
										 ,pep.per.mint.agent.ws.client.handler
										 ,pep.per.mint.agent.util" />

	<aop:aspectj-autoproxy />

	<!-- <default-servlet-handler/> -->

	<annotation-driven />



	<!-- Properties resource for oracle test datasource -->
	<util:properties id="agentProperties"
		location="classpath:/config/agent.properties" />
	<task:executor id="agentManagementExecutor" pool-size="10-40"
		queue-capacity="100" rejection-policy="ABORT" />
	<task:scheduler id="agentManagementScheduler" pool-size="5" />
	<task:annotation-driven executor="agentManagementExecutor"
		scheduler="agentManagementScheduler" />

	<beans:bean id="systemResourceUtil" class="pep.per.mint.agent.util.SystemResourceUtil" />
	<beans:bean id="resourceCheckService"
		class="pep.per.mint.agent.service.ResourceCheckService" />
	<beans:bean id="agentService" class="pep.per.mint.agent.service.AgentService" />
	<beans:bean id="fileUploadService"
		class="pep.per.mint.agent.service.FileUploadService" />
	<beans:bean id="qmgrManipulateService"
		class="pep.per.mint.agent.service.QmgrManipulateService" />
	<beans:bean id="simulatorService" class="pep.per.mint.agent.service.SimulatorService" />

	<beans:bean id="qmgrCheckScheduler"
		class="pep.per.mint.agent.scheduler.QmgrCheckScheduler" />
	
	<beans:bean id="resourceCheckScheduler"
		class="pep.per.mint.agent.scheduler.ResourceCheckScheduler" />
	
	<beans:bean id="agentCheckScheduler"
		class="pep.per.mint.agent.scheduler.AgentCheckScheduler" />
		
	<beans:bean id="qmgrCheckService" class="pep.per.mint.agent.service.QmgrCheckService">
		<beans:property name="qmgrManagerForMI">
			<beans:bean class="pep.per.mint.agent.util.QmgrManagerForILink" />
		</beans:property>
		<beans:property name="qmgrManagerForWMQ">
			<beans:bean class="pep.per.mint.agent.util.QmgrManagerForWmq" />
		</beans:property>
	</beans:bean>

	<beans:bean name="linkedQueue" class="java.util.concurrent.LinkedBlockingQueue" />
	<beans:bean name="serviceListener"
		class="pep.per.mint.agent.event.ServiceListenerImpl" />
	<beans:bean name="serviceRoutingHandler"
		class="pep.per.mint.agent.handler.ServiceRoutingHandlerImpl" />
	<!--
		<beans:bean id="textWebSessionHandler" class="pep.per.mint.agent.ws.client.handler.TextWebSessionHandler">
			<beans:constructor-arg index="0" ref="basicAgentInfo"/>
		</beans:bean>
	-->

	<beans:bean id="openWebSocketClientHandler"
		class="pep.per.mint.agent.ws.client.handler.OpenWebSocketClientHandler">
		<beans:constructor-arg index="0" ref="basicAgentInfo" />
	</beans:bean>

	<beans:bean id="queueListener" class="pep.per.mint.agent.event.QueueListenerImpl"
		destroy-method="stop">
		<beans:constructor-arg index="0" ref="linkedQueue" />
		<beans:constructor-arg index="1" ref="basicAgentInfo" />
		<beans:constructor-arg index="2" ref="agentController" />
	</beans:bean>
	<!--
		<beans:bean id="queueListener" class="pep.per.mint.agent.event.QueueListenerImpl"	destroy-method="stop">
			<beans:constructor-arg index="0" ref="linkedQueue"/>
			<beans:constructor-arg index="1" ref="basicAgentInfo"/>
			<beans:constructor-arg index="2" ref="openWebSocketClientHandler"/>
		</beans:bean>
	-->

	<beans:bean id="agentController"
		class="pep.per.mint.agent.controller.AgentController">
		<beans:constructor-arg index="0" value="0" />
		<beans:constructor-arg index="1" ref="basicAgentInfo" />
		<beans:constructor-arg index="2" ref="linkedQueue" />
	</beans:bean>

	<beans:bean id="mqObjectMonitorController"
		class="pep.per.mint.agent.controller.MQObjectMonitorController">
		<beans:constructor-arg index="0" ref="basicAgentInfo" />
		<beans:constructor-arg index="1" ref="linkedQueue" />
	</beans:bean>

	<beans:bean id="taskExecutor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<beans:property name="corePoolSize" value="5" />
		<beans:property name="maxPoolSize" value="50" />
		<beans:property name="queueCapacity" value="25" />
	</beans:bean>

	<beans:bean name="basicAgentInfo"
		class="pep.per.mint.common.data.basic.agent.IIPAgentInfo">
		<beans:qualifier value="agentInfoByProperty" />
		<beans:property name="agentId" value="" />
		<beans:property name="agentCd"
			value="#{agentProperties['iip.agent.cd']}" />
		<beans:property name="agentNm"
			value="#{agentProperties['iip.agent.nm']}" />
		<beans:property name="spProtocol"
			value="#{agentProperties['iip.server.websocket.protocol']}" />
		<beans:property name="spIp"
			value="#{agentProperties['iip.server.websocket.ip']}" />
		<beans:property name="spPort"
			value="#{agentProperties['iip.server.websocket.port']}" />
		<beans:property name="spContextRoot"
			value="#{agentProperties['iip.server.websocket.contextroot']}" />
		<beans:property name="spWebSocketUrl"
			value="#{agentProperties['iip.server.websocket.websocketUrl']}" />
	</beans:bean>

	<beans:bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<beans:property name="basename" value="classpath:messages/messages" />
		<beans:property name="defaultEncoding" value="UTF-8" />
	</beans:bean>

</beans:beans>
